description "<%= name %>"

start on runlevel [2345]
stop on runlevel[!2345]

script
  cd <%= current_path %>
  echo $$ > <%= pidfile %>
  exec su -s /bin/sh -c "/home/ec2-user/.rvm/wrappers/<%= wrapper %>/bundle exec <%= exe %>" <%= user %>
end script

pre-stop script
  rm <%= pidfile %>
end script
